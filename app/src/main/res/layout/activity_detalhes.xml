<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc2"
    tools:context="com.example.andreia.testandoaviso.DetalhesActivity">

    <TextView
        android:id="@+id/viewAcerto"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="Acertos"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="80sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/viewErro"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="Erros"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="80sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/viewAcerto"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickTelaMain"
        android:layout_marginBottom="36dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewAcerto"
        android:layout_marginTop="64dp"
        android:text="Acertos"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Erros"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/viewErro" />


</RelativeLayout>
